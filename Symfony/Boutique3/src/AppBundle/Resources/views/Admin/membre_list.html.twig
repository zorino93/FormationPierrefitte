{% extends 'layout.html.twig' %}

{% block content %}

    {{ dump(membres)}}
    Je suis dans la page membre_list.

    {% for message in app.session.flashbag.get('success') %}
        <div class="alert alert-success alert-dismissible fade show">{{message}}</div>
        <button aria-label="close" class="close" data-dismiss="alert" type="button">
            <span aria-hidden="true">&times;</span>
        </button>
    {% endfor %}
    <div>
        <a href="{{ path('membre_add') }}" class="m-2 btn btn-primary">
            <i class="fas fa-plus"></i>&nbsp Ajouter un Membre</a>
    </div>
    <table class="table dark-table">
        <thead>
            <th>Id membre</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Email</th>
            <th>Civilite</th>
            <th>ville</th>
            <th>adresse</th>
            <th>Code Postal</th>
            <th>username</th>
            <th>Commandes</th>
            <th colspan="3">Action</th>
        </thead>
        <tbody>
            {% for mb in membres %}
                <tr>
                    <td>{{mb.idMembre}}</td>
                    <td>{{mb.nom}}</td>
                    <td>{{mb.prenom}}</td>
                    <td>{{mb.email}}</td>
                    <td>{{mb.civilite}}</td>
                    <td>{{mb.ville}}</td>
                    <td>{{mb.adresse}}</td>
                    <td>{{mb.codepostal}}</td>
                    <td>{{mb.username}}</td>
                    <td>{{mb.commandes | length }}</td>
                    <td>
                        <a href="{{path('membre_delete', {'id' : mb.idMembre})}}" onclick="return confirm('Ãªtes-vous certain de vouloir supprimer le membre {{ mb.idMembre }}')">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{path('membre_update', {'id' : mb.idMembre})}}">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a target="_blank" href="{{ path('membre_view', {'id' : mb.idMembre})}}">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}
